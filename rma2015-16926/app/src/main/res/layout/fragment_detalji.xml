<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Ime:"
                android:id="@+id/imeMuzicara"
                android:layout_weight="0.03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Zanr:"
                android:id="@+id/zanrMuzicara"
                android:layout_weight="0.03" />

            <TextView
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Web stranica:"
                android:id="@+id/webStranica"
                android:layout_weight="0.20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Biografija:"
                android:id="@+id/biografijaMuzicara"
                android:layout_weight="0.79" />

            <TextView
                android:layout_width="93dp"
                android:layout_height="44dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Popularity:"
                android:id="@+id/popularity" />

            <TextView
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Followers:"
                android:id="@+id/followers" />

            <Button
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Slicni muzicari"
                android:id="@+id/slicniMuzicari"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALBUM"
                android:id="@+id/buttonAlbumi"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_weight="0.03" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/FrameSimilarTop" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
